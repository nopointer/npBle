<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar" />

    <Button
        android:id="@+id/select_bin_btn"
        style="@style/wrap"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:text="点击选择固件" />

    <TextView
        android:id="@+id/select_btn_tv"
        style="@style/wrap"
        android:layout_margin="6dp"
        android:text="当前选择的固件:" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <Button
            android:id="@+id/start_ota_btn"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:text="开始 OTA" />

        <Button
            android:id="@+id/stop_ota_btn"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:text="停止 OTA" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <LinearLayout
            style="@style/wrap_h"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/count_progress_tv"
                style="@style/wrap"
                android:text="0/1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/total_progress_tv"
                style="@style/wrap"
                android:layout_marginLeft="20dp"
                android:text="0%"
                android:textSize="18sp" />

        </LinearLayout>


        <npwidget.nopointer.progress.NpRectProgressView
            android:id="@+id/npRectProgressView"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_margin="20dp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="--"
                android:textColor="#999"
                android:id="@+id/text_info_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp" />

        </ScrollView>


    </LinearLayout>


</LinearLayout>